#include <stdio.h>
#include <locale.h>
#include <string.h>
#include <stdlib.h>


#define MAX 100

int main (){
	setlocale(LC_ALL,"Portuguese");
	int numeroPesquisas=0,terminar=-1;
	int genero[MAX], sexo[MAX], idades[MAX], idade;
	
	do{
		printf("Pesquisa de satisfacao: \n");
		printf("______________________\n");
		printf("\nIdade: \n");
		scanf("%d",&idade);
	if(idade!=-1){
		idades[numeroPesquisas]=idade;
		printf("\nSexo: \n 1. Homem\n 2. Mulher");
		scanf("%d",&sexo[numeroPesquisas]);
		printf("\nGenero: \n 1. Comedia\n 2.Terror\n 3. Acao");
		scanf("%d",&genero[numeroPesquisas]);
		
		numeroPesquisas+=1;
		system("cls");
		
		}	
	} while (idade!=-1);
	
	printf("Pesquisa encerrada!\nDADOS:\n");
	
	double media_idade_terror;
	double perc_homem_acao;
	
	for(int i=0;i<numeroPesquisas;i++){
		double soma_terror=0, soma_idade_terror=0;
		double soma_mulheres=0,soma_homens=0;
		double homem_acao=0;
		
		if (sexo[i]%2==0){
			soma_mulheres+=1;
		}
		else{
			soma_homens+=1;
		}
		
		if(genero[i]==2){
			soma_terror+=1;
			soma_idade_terror+=idades[i];
		}
		media_idade_terror=soma_idade_terror/soma_terror;
		
		if(sexo[i]==1 && genero[i]==3){
			homem_acao=0;
			homem_acao+=1;
		}
		perc_homem_acao=100*(homem_acao/soma_homens);
		
	}
	printf("A media de idades que prefere terror Ã© %f anos. ",media_idade_terror);
	printf("Percentual de homens que preferem filme de Acao: %.2f % ",perc_homem_acao);
	
	
	
	
}
